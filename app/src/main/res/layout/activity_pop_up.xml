<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    tools:context=".PopUPActivity">

    <ImageView
        android:elevation="60dp"
        android:layout_margin="100dp"
        android:id="@+id/icon"
        android:paddingLeft="25dp"
        android:layout_width="wrap_content"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="145dp"
        android:layout_height="wrap_content"
        android:src="@drawable/locicon"/>

    <LinearLayout
        android:id="@+id/liParent"
        android:layout_width="340dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drabackground"
        android:elevation="40dp"

        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="68dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#000"
            android:text="Success!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="We will send you the location\n shortly be happy" />

        <Button
            android:layout_width="250dp"
            android:layout_height="85dp"
            android:id="@+id/btnclose"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btnclose"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overbox"
        android:elevation="4dp"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/tvfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="LOST YOUR BIKE\n AGAIN\n NOW?"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfirst"
        android:layout_marginLeft="10dp"
        android:text="Please don't be worried"
        android:textColor="#3F51B5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvsecond"
        android:layout_marginTop="350dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnActivate"
            android:layout_width="250dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:background="@drawable/btngps"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>